@model E_Mag.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}


<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация нового пользователя!</h2>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Логин" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Пароль" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Подтверждение пароля" })
                        <button type="submit" class="btn btn-default">Регистрация</button>
                    }
                </div><!--/sign up form-->
        </div>
    </div>
</div>

                     

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
