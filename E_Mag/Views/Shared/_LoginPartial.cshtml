@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li>
                <a href="/Manage/Index"><i class="fa fa-user"> </i>@User.Identity.GetUserName()</a>
            </li>

            @*<li>@Html.ActionLink("<i class=\"fa fa-user\"></i>"+User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>*@
            <li><a href="#"><i class="fa fa-star"></i> Список желаний</a></li>
            <li><a href="checkout.html"><i class="fa fa-crosshairs"></i> Проверка</a></li>
            <li><a href="/Home/ShowCart"><i class="fa fa-shopping-cart"></i> Корзина</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        </ul>       
    }
}
else
{
        <ul class="nav navbar-nav">
            <li><a href="#"><i class="fa fa-star"></i> Список желаний</a></li>
            <li><a href="checkout.html"><i class="fa fa-crosshairs"></i> Проверка</a></li>
            <li><a href="/Home/ShowCart"><i class="fa fa-shopping-cart"></i> Корзина</a></li>
            <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>                    
        </ul>
}
